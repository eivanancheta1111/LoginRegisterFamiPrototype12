<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluelight"
    android:fitsSystemWindows="true"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/computePage"
        android:layout_below="@+id/computePage"
        android:text="d. Where can I start Investing?"
        android:textStyle="italic"
        android:onClick="MapPage"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="WELCOME"
        android:textAlignment="center"
        android:textSize="24sp" />


    <Button
        android:id="@+id/signoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:text="Signout"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:text="to FAMI Mutual Fund Application"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aboutFamiLink"
        android:layout_centerHorizontal="true"
        android:text="What do you want to know?"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/computePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablePage"
        android:layout_centerHorizontal="true"
        android:onClick="ComputeInputPage"
        android:text="c. Compute my Investment"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tablePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/aboutFamiLink"
        android:layout_below="@+id/aboutFamiLink"
        android:onClick="DisplayFundTable"
        android:text="b. Trending Investments"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/aboutFamiLink"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/computePage"
        android:layout_centerVertical="true"
        android:textStyle="italic"
        android:text="@string/linktofami"
        android:textSize="24sp" />

</RelativeLayout>